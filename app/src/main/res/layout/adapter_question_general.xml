<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:clipToPadding="false"
    android:paddingBottom="4dp">

    <TextView
        android:id="@+id/adap_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adap_question"
        android:layout_alignParentRight="false"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/adap_tagicon"
        android:text="Vor 10 Minuten"
        android:textColor="@color/timestampColor"
        android:textSize="11sp" />

    <ImageView
        android:id="@+id/adap_tagicon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:elevation="2dp"
        android:outlineProvider="none"
        app:srcCompat="@drawable/baseline_account_circle_24" />



    <TextView
        android:id="@+id/adap_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@id/expander"
        android:layout_toRightOf="@id/adap_tagicon"
        android:elevation="10dp"
        android:fontFamily="@font/seguisb"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:outlineProvider="none"
        android:text="@string/default_questiontext"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/adap_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/adap_tagicon"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="4dp"
        android:elevation="10dp"
        android:fontFamily="@font/segui"
        android:includeFontPadding="false"
        android:maxLines="3"
        android:outlineProvider="none"
        android:text="@string/default_questioncontext"
        android:textColor="@android:color/black"
        android:textSize="12sp" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <ImageView
        android:id="@+id/expander"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerInside"
        android:tint="@color/timestampColor"
        app:srcCompat="@drawable/baseline_expand_more_24" />

    <ImageView
        android:id="@+id/adap_stat_1c"
        android:layout_width="@dimen/height_stat"
        android:layout_height="@dimen/height_stat"
        android:layout_below="@id/adap_context"
        android:layout_alignParentBottom="false"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:tint="@color/timestampColor"
        app:srcCompat="@drawable/baseline_rss_feed_24" />

    <TextView
        android:id="@+id/adap_stat_1t"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_stat"
        android:layout_below="@id/adap_context"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/adap_stat_1c"
        android:gravity="center_vertical"
        android:textColor="@color/timestampColor"
        android:textSize="@dimen/textsize_stat" />

    <ImageView
        android:id="@+id/adap_stat_2c"
        android:layout_width="@dimen/height_stat"
        android:layout_height="@dimen/height_stat"
        android:layout_below="@id/adap_context"
        android:layout_alignParentBottom="false"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/adap_stat_1t"
        android:tint="@color/timestampColor"
        app:srcCompat="@drawable/baseline_whatshot_24" />

    <TextView
        android:id="@+id/adap_stat_2t"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_stat"
        android:layout_below="@id/adap_context"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/adap_stat_2c"
        android:gravity="center_vertical"
        android:textColor="@color/timestampColor"
        android:textSize="@dimen/textsize_stat" />

    <ImageView
        android:id="@+id/adap_stat_3c"
        android:layout_width="@dimen/height_stat"
        android:layout_height="@dimen/height_stat"
        android:layout_below="@id/adap_context"
        android:layout_alignParentBottom="false"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/adap_stat_2t"
        android:tint="@color/timestampColor"

        app:srcCompat="@drawable/baseline_how_to_vote_24" />

    <TextView
        android:id="@+id/adap_stat_3t"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_stat"
        android:layout_below="@id/adap_context"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/adap_stat_3c"
        android:gravity="center_vertical"
        android:textColor="@color/timestampColor"
        android:textSize="@dimen/textsize_stat" />

    <ImageView
        android:id="@+id/adap_stat_4c"
        android:layout_width="@dimen/height_stat"
        android:layout_height="@dimen/height_stat"
        android:layout_below="@id/adap_context"
        android:layout_alignParentBottom="false"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/adap_stat_3t"
        android:tint="@color/timestampColor"

        app:srcCompat="@drawable/baseline_account_circle_24" />

    <TextView
        android:id="@+id/adap_stat_4t"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_stat"
        android:layout_below="@id/adap_context"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/adap_stat_4c"
        android:gravity="center_vertical"
        android:textColor="@color/timestampColor"
        android:textSize="@dimen/textsize_stat" />
    <View
        android:id="@+id/adap_background_answer"
        android:layout_width="wrap_content"
        android:layout_height="176dp"
        android:layout_below="@id/adap_stat_1c"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="6dp"

        android:layout_marginTop="12dp"
        android:layout_marginEnd="6dp"
        android:background="@drawable/shape_5"
        android:elevation="3dp" />

    <com.project.app.CustomViews.PresetAnswer
        android:id="@+id/answer1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_answer"
        android:layout_below="@id/adap_stat_1c"
        android:layout_marginStart="14dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="14dp"
        android:elevation="4dp"
        android:outlineProvider="none">

    </com.project.app.CustomViews.PresetAnswer>

    <com.project.app.CustomViews.PresetAnswer
        android:id="@+id/answer2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_answer"
        android:layout_below="@id/answer1"
        android:layout_marginStart="14dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="14dp"
        android:elevation="4dp"
        android:outlineProvider="none">

    </com.project.app.CustomViews.PresetAnswer>

    <com.project.app.CustomViews.PresetAnswer
        android:id="@+id/answer3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_answer"
        android:layout_below="@id/answer2"
        android:layout_marginStart="14dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="14dp"
        android:elevation="4dp"
        android:outlineProvider="none">

    </com.project.app.CustomViews.PresetAnswer>

    <com.project.app.CustomViews.PresetAnswer
        android:id="@+id/answer4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_answer"
        android:layout_below="@id/answer3"
        android:layout_marginStart="14dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="14dp"
        android:elevation="4dp"
        android:outlineProvider="none">

    </com.project.app.CustomViews.PresetAnswer>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="8dp"
        android:layout_below="@id/answer4" />
</RelativeLayout>