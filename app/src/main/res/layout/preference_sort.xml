<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/settings_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Sortmode"
        android:textColor="@color/primaryOppositeColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/sort1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:elevation="10dp"
        android:outlineProvider="none"
        android:scaleType="centerInside"
        android:tint="@color/primaryOppositeColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/sort2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@+id/settings_header"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_sort_24" />

    <ImageView
        android:id="@+id/sort2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.5"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:elevation="10dp"
        android:outlineProvider="none"
        android:rotation="180"
        android:scaleType="centerInside"
        android:tint="@color/primaryOppositeColor"
        app:layout_constraintBottom_toBottomOf="@+id/sort1"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/sort3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/sort1"
        app:layout_constraintTop_toTopOf="@+id/sort1"
        app:srcCompat="@drawable/baseline_sort_24" />

    <ImageView
        android:id="@+id/sort3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.5"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:elevation="10dp"
        android:outlineProvider="none"
        android:scaleType="centerInside"
        android:tint="@color/primaryOppositeColor"
        app:layout_constraintBottom_toBottomOf="@+id/sort2"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/sort4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/sort2"
        app:layout_constraintTop_toTopOf="@+id/sort2"
        app:srcCompat="@drawable/baseline_sort_by_alpha_24" />

    <ImageView
        android:id="@+id/sort4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:alpha="0.5"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:elevation="10dp"
        android:rotation="180"
        android:scaleType="centerInside"
        android:tint="@color/primaryOppositeColor"
        app:layout_constraintBottom_toBottomOf="@+id/sort3"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/sort3"
        app:layout_constraintTop_toTopOf="@+id/sort3"
        app:srcCompat="@drawable/baseline_sort_by_alpha_24" />
</androidx.constraintlayout.widget.ConstraintLayout>