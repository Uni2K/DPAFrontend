<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <ImageView
        android:id="@+id/c_answer_picture_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/shape_5"
        android:backgroundTint="#E2E0E0"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <TextView
        android:id="@+id/c_answer_picture_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:drawableTint="@color/primaryOppositeColor"
        android:gravity="center_horizontal|center_vertical"
        android:text="Add Picture"
        android:textColor="@color/primaryOppositeColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/c_answer_picture_1"
        app:layout_constraintTop_toTopOf="@+id/c_answer_picture_content" />

    <ImageView
        android:id="@+id/c_answer_picture_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:backgroundTint="@color/primaryOppositeColor"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="@+id/c_answer_picture_content"
        app:layout_constraintEnd_toStartOf="@+id/c_answer_picture_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/round_add_circle_24" />
</androidx.constraintlayout.widget.ConstraintLayout>