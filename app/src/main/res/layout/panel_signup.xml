<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">


    <View
        android:id="@+id/signup_email_back"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/shape_5"
        android:elevation="4dp"
        app:layout_constraintBottom_toTopOf="@+id/signup_pw_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_back" />

    <ImageView
        android:id="@+id/signup_email_icon"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="?attr/selectableItemBackground"
        android:elevation="5dp"
        android:scaleType="centerInside"
        android:tint="@color/primaryDarkColor"
        app:layout_constraintDimensionRatio="W,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/signup_email_back"
        app:srcCompat="@drawable/baseline_email_24" />

    <ImageView
        android:id="@+id/signup_email_clear"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:elevation="10dp"
        android:outlineProvider="none"
        android:scaleType="centerInside"
        android:tint="@color/primaryDarkColor"
        app:layout_constraintBottom_toBottomOf="@+id/signup_email_back"
        app:layout_constraintDimensionRatio="W,1:1"
        app:layout_constraintEnd_toEndOf="@+id/signup_email_back"
        app:layout_constraintTop_toTopOf="@+id/signup_email_back"
        app:srcCompat="@drawable/baseline_clear_24" />


    <EditText
        android:id="@+id/signup_email"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginEnd="8dp"
        android:background="@null"
        android:elevation="10dp"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:outlineProvider="none"
        android:textColor="@color/primaryTextColor"
        android:textColorHint="@color/primaryDarkColor"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/signup_email_back"
        app:layout_constraintEnd_toStartOf="@+id/signup_email_clear"
        app:layout_constraintStart_toEndOf="@+id/signup_email_icon"
        app:layout_constraintTop_toTopOf="@+id/signup_email_back" />


    <View
        android:id="@+id/name_back"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/shape_5"
        android:elevation="4dp"
        app:layout_constraintBottom_toTopOf="@+id/signup_email_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/name_icon"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="?attr/selectableItemBackground"
        android:elevation="5dp"
        android:scaleType="centerInside"
        android:tint="@color/primaryDarkColor"
        app:layout_constraintDimensionRatio="W,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/name_back"
        app:srcCompat="@drawable/baseline_account_circle_24" />

    <ImageView
        android:id="@+id/name_clear"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:elevation="10dp"
        android:outlineProvider="none"
        android:scaleType="centerInside"
        android:tint="@color/primaryDarkColor"
        app:layout_constraintBottom_toBottomOf="@+id/name_back"
        app:layout_constraintDimensionRatio="W,1:1"
        app:layout_constraintEnd_toEndOf="@+id/name_back"
        app:layout_constraintTop_toTopOf="@+id/name_back"
        app:srcCompat="@drawable/baseline_clear_24" />


    <EditText
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginEnd="8dp"
        android:background="@null"
        android:elevation="10dp"
        android:hint="Enter Username"
        android:inputType="textEmailAddress"
        android:outlineProvider="none"
        android:textColor="@color/primaryTextColor"
        android:textColorHint="@color/primaryDarkColor"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/name_back"
        app:layout_constraintEnd_toStartOf="@+id/name_clear"
        app:layout_constraintStart_toEndOf="@+id/name_icon"
        app:layout_constraintTop_toTopOf="@+id/name_back" />


    <View
        android:id="@+id/signup_pw_back"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape_5"
        android:elevation="4dp"
        app:layout_constraintBottom_toTopOf="@+id/signup_go"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_email_back" />

    <ImageView
        android:id="@+id/signup_pw_icon"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="?attr/selectableItemBackground"
        android:elevation="5dp"
        android:scaleType="centerInside"
        android:tint="@color/primaryDarkColor"
        app:layout_constraintDimensionRatio="W,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/signup_pw_back"
        app:srcCompat="@drawable/baseline_lock_24" />

    <ImageView
        android:id="@+id/signup_pw_clear"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:elevation="10dp"
        android:outlineProvider="none"
        android:scaleType="centerInside"
        android:tint="@color/primaryDarkColor"
        app:layout_constraintBottom_toBottomOf="@+id/signup_pw_back"
        app:layout_constraintDimensionRatio="W,1:1"
        app:layout_constraintEnd_toEndOf="@+id/signup_pw_back"
        app:layout_constraintTop_toTopOf="@+id/signup_pw_back"
        app:srcCompat="@drawable/baseline_clear_24" />


    <EditText
        android:id="@+id/signup_pw"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:background="@null"
        android:dropDownAnchor="@id/anchor_dropdown"
        android:dropDownWidth="wrap_content"
        android:dropDownHeight="wrap_content"

        android:dropDownHorizontalOffset="10dp"
        android:dropDownVerticalOffset="10dp"
        android:elevation="10dp"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:outlineProvider="none"
        android:popupBackground="@drawable/background_autocomplete"
        android:textColor="@color/primaryTextColor"
        android:textColorHint="@color/primaryDarkColor"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/signup_pw_back"
        app:layout_constraintEnd_toStartOf="@+id/signup_pw_clear"
        app:layout_constraintStart_toEndOf="@+id/signup_pw_icon"
        app:layout_constraintTop_toTopOf="@+id/signup_pw_back" />


    <com.project.app.CustomViews.ActionButton
        android:id="@+id/signup_go"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:drawablePadding="12dp"
        android:gravity="center|center_vertical"
        android:paddingLeft="24dp"
        android:paddingTop="6dp"
        android:paddingRight="24dp"
        android:paddingBottom="6dp"
        android:textSize="20dp"
        android:textStyle="bold"
        app:abbackgroundTint="@color/themeColorUser"
        app:abelementTint="@color/white"
        app:abicon="@drawable/baseline_navigate_next_24"
        app:abtext="Singup"
        app:cardElevation="7dp"
        app:cardMaxElevation="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</merge>