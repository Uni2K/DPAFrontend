<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:clipToPadding="false"
    android:paddingBottom="4dp">

    <TextView
        android:id="@+id/adap_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adap_name"
        android:layout_alignParentRight="false"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/adap_avatar"
        android:text="Vor 10 Minuten"
        android:textColor="@color/timestampColor"
        android:textSize="11sp" />

    <ImageView
        android:id="@+id/adap_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:elevation="20dp"
        android:outlineProvider="none"
        app:srcCompat="@drawable/baseline_account_circle_24" />

    <TextView
        android:id="@+id/adap_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_toRightOf="@id/adap_avatar"
        android:elevation="10dp"
        android:fontFamily="@font/seguisb"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:outlineProvider="none"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/adap_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/adap_avatar"
        android:layout_alignParentRight="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:elevation="10dp"
        android:fontFamily="@font/segui"
        android:includeFontPadding="false"
        android:maxLines="3"
        android:outlineProvider="none"
        android:textColor="@android:color/black"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/adap_stat_1c"
        android:layout_width="@dimen/height_stat"
        android:layout_height="@dimen/height_stat"
        android:layout_below="@id/adap_context"
        android:layout_alignParentBottom="false"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:tint="@color/timestampColor"
        app:srcCompat="@drawable/baseline_location_city_24" />

    <TextView
        android:id="@+id/adap_stat_1t"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_stat"
        android:layout_below="@id/adap_context"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/adap_stat_1c"
        android:gravity="center_vertical"
        android:text="23"
        android:textColor="@color/timestampColor"
        android:textSize="@dimen/textsize_stat" />

    <ImageView
        android:id="@+id/adap_stat_2c"
        android:layout_width="@dimen/height_stat"
        android:layout_height="@dimen/height_stat"
        android:layout_below="@id/adap_context"
        android:layout_alignParentBottom="false"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/adap_stat_1t"
        android:tint="@color/timestampColor"
        app:srcCompat="@drawable/baseline_date_range_24" />

    <TextView
        android:id="@+id/adap_stat_2t"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_stat"
        android:layout_below="@id/adap_context"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/adap_stat_2c"
        android:gravity="center_vertical"
        android:text="23"
        android:textColor="@color/timestampColor"
        android:textSize="@dimen/textsize_stat" />

    <ImageView
        android:id="@+id/adap_stat_3c"
        android:layout_width="@dimen/height_stat"
        android:layout_height="@dimen/height_stat"
        android:layout_below="@id/adap_context"
        android:layout_alignParentBottom="false"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/adap_stat_2t"
        android:tint="@color/timestampColor"

        app:srcCompat="@drawable/baseline_how_to_vote_24" />

    <TextView
        android:id="@+id/adap_stat_3t"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_stat"
        android:layout_below="@id/adap_context"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/adap_stat_3c"
        android:gravity="center_vertical"
        android:text="23"
        android:textColor="@color/timestampColor"
        android:textSize="@dimen/textsize_stat" />

    <com.project.app.CustomViews.SubscribeButton
        android:id="@+id/adap_tb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adap_context"

        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        app:cicon="@drawable/baseline_favorite_24"
        app:ctext="Subscribe"></com.project.app.CustomViews.SubscribeButton>



</RelativeLayout>