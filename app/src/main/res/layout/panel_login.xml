<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="0dp"
        android:text="Hello again,"
        android:textColor="@color/primaryOppositeColor"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/login_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="TestAccount"
        android:textColor="@color/primaryOppositeColor"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/login_changeuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:alpha="0.7"
        android:background="?attr/selectableItemBackground"
        android:text="This is not me"
        android:textColor="@color/secondaryColor"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@+id/login_user"
        app:layout_constraintTop_toBottomOf="@+id/login_user" />

    <TextView
        android:id="@+id/login_forgotpw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:alpha="0.7"
        android:background="?attr/selectableItemBackground"
        android:text="Forgot Password"
        android:textColor="@color/secondaryColor"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@+id/login_edit_icon"
        app:layout_constraintTop_toBottomOf="@id/login_edit_icon" />

    <View
        android:id="@+id/login_pw_back"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape_5"
        android:elevation="4dp"
        app:layout_constraintBottom_toTopOf="@+id/login_go"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_email_back" />

    <ImageView
        android:id="@+id/login_edit_icon"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="?attr/selectableItemBackground"
        android:elevation="5dp"
        android:scaleType="centerInside"
        android:tint="@color/primaryDarkColor"
        app:layout_constraintDimensionRatio="W,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/login_pw_back"
        app:srcCompat="@drawable/baseline_lock_24" />

    <ImageView
        android:id="@+id/login_pw_clear"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:elevation="10dp"
        android:outlineProvider="none"
        android:scaleType="centerInside"
        android:tint="@color/primaryDarkColor"
        app:layout_constraintBottom_toBottomOf="@+id/login_pw_back"
        app:layout_constraintDimensionRatio="W,1:1"
        app:layout_constraintEnd_toEndOf="@+id/login_pw_back"
        app:layout_constraintTop_toTopOf="@+id/login_pw_back"
        app:srcCompat="@drawable/baseline_clear_24" />


    <EditText
        android:id="@+id/login_pw"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginEnd="8dp"
        android:background="@null"
        android:dropDownAnchor="@id/anchor_dropdown"
        android:dropDownWidth="wrap_content"
        android:dropDownHeight="wrap_content"

        android:dropDownHorizontalOffset="10dp"
        android:dropDownVerticalOffset="10dp"
        android:elevation="10dp"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:outlineProvider="none"
        android:popupBackground="@drawable/background_autocomplete"
        android:textColor="@color/primaryTextColor"
        android:textColorHint="@color/primaryDarkColor"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/login_pw_back"
        app:layout_constraintEnd_toStartOf="@id/login_pw_clear"
        app:layout_constraintStart_toEndOf="@id/login_edit_icon"
        app:layout_constraintTop_toTopOf="@+id/login_pw_back" />

    <View
        android:id="@+id/login_email_back"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape_5"
        android:elevation="4dp"
        app:layout_constraintBottom_toTopOf="@+id/login_pw_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/login_edit_icon_2"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="?attr/selectableItemBackground"
        android:elevation="5dp"
        android:scaleType="centerInside"
        android:tint="@color/primaryDarkColor"
        app:layout_constraintDimensionRatio="W,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/login_email_back"
        app:srcCompat="@drawable/baseline_email_24" />

    <ImageView
        android:id="@+id/login_email_clear"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:elevation="10dp"
        android:outlineProvider="none"
        android:scaleType="centerInside"
        android:tint="@color/primaryDarkColor"
        app:layout_constraintBottom_toBottomOf="@+id/login_email_back"
        app:layout_constraintDimensionRatio="W,1:1"
        app:layout_constraintEnd_toEndOf="@+id/login_email_back"
        app:layout_constraintTop_toTopOf="@+id/login_email_back"
        app:srcCompat="@drawable/baseline_clear_24" />


    <EditText
        android:id="@+id/login_email"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginEnd="8dp"
        android:background="@null"
        android:dropDownAnchor="@id/anchor_dropdown"
        android:dropDownWidth="wrap_content"
        android:dropDownHeight="wrap_content"

        android:dropDownHorizontalOffset="10dp"
        android:dropDownVerticalOffset="10dp"
        android:elevation="10dp"
        android:hint="Enter Email"
        android:inputType="textPassword|textEmailAddress"
        android:outlineProvider="none"
        android:popupBackground="@drawable/background_autocomplete"
        android:textColor="@color/primaryTextColor"
        android:textColorHint="@color/primaryDarkColor"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/login_email_back"
        app:layout_constraintEnd_toStartOf="@id/login_email_clear"
        app:layout_constraintStart_toEndOf="@id/login_edit_icon_2"
        app:layout_constraintTop_toTopOf="@+id/login_email_back" />

    <com.project.app.CustomViews.ActionButton
        android:id="@+id/login_go"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:drawablePadding="12dp"
        android:gravity="center|center_vertical"
        android:paddingLeft="24dp"
        android:paddingTop="6dp"
        android:paddingRight="24dp"
        android:paddingBottom="6dp"
        android:textSize="20dp"
        android:textStyle="bold"
        app:abbackgroundTint="@color/themeColorUser"
        app:abelementTint="@color/white"
        app:abicon="@drawable/baseline_navigate_next_24"
        app:abtext="Login"
        app:cardElevation="7dp"
        app:cardMaxElevation="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/login_icon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/login_changeuser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/login_user"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_account_circle_24" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/userGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="textView,login_changeuser,login_icon,login_user" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/loginNameGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="login_email_back,login_edit_icon_2,login_email,login_email_clear" />


</merge>