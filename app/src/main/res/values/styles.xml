<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/colorAccent</item>
<!--        <item name="colorControlHighlight">@color/rippleColor</item>-->
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="FullScreenDialogStyle" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowIsFloating">false</item>
        <item name="colorControlHighlight">@color/rippleColor</item>
        <item name="android:windowAnimationStyle">@style/SlideAnimation.Window</item>
        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Button.Navigation.Tinted</item>
        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@color/white</item>
        <item name="colorControlNormal">@color/white</item>

    </style>
    <style name="Toolbar.Button.Navigation.Tinted" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@color/white</item>
    </style>
    <style name="CreateShapeOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
    </style>

    <style name="SlideAnimation.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <style name="FullScreenDialogStyleCreate" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:statusBarColor">@color/secondaryColor</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/secondaryColor</item>
        <item name="android:windowIsFloating">false</item>
        <item name="colorControlHighlight">@color/rippleColor</item>

        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@color/white</item>

    </style>
    <style name="FullScreenDialogStyleLogin" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowIsFloating">false</item>
        <item name="colorControlHighlight">@color/rippleColor</item>

        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@color/white</item>

    </style>
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/seguisb</item>

    </style>

    <style name="FullScreenDialogStyleSearch" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:statusBarColor">@color/primaryColor</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/primaryLightColor</item>
        <item name="android:windowIsFloating">false</item>
        <item name="colorControlHighlight">@color/rippleColor</item>
        <item name="android:windowAnimationStyle">@style/SlideAnimation.Window</item>
        <item name="android:windowBackground">@color/white</item>

    </style>

    <style name="FullScreenDialogStyleTransparent" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowIsFloating">false</item>
        <item name="colorControlHighlight">@color/rippleColor</item>

        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@android:color/transparent</item>

    </style>
    <style name="chipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">11sp</item>
    </style>
    <style name="ChipCustomStyle" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIcon">@null</item>
    </style>
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="TopRoundCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>


    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#FFFFFF</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/secondaryDarkColor</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#423F3939</item>
    </style>

    <style name="ToolTipAssistant" >
        <item name="ttlm_backgroundColor">@color/themeColorAssistant</item>
        <item name="ttlm_padding">15dp</item>
        <item name="ttlm_elevation">3dp</item>
        <item name="android:textAppearance">@style/AssistantTextAppearance</item>


    </style>
    <style name="AssistantTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#fff</item>
    </style>



    <style name="UserSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/themeColorUser</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/secondaryDarkColor</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#423F3939</item>
    </style>

    <style name="UserLoggedInSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/themeColorUserLoggedIn</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/secondaryDarkColor</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#423F3939</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/secondaryDarkColor</item>
    </style>
</resources>
