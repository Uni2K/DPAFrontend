<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/container1"
        android:layout_width="44dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/normalTextBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:clickable="true"
            android:fontFamily="serif-monospace"
            android:gravity="center"
            android:text="T"
            android:textSize="24sp"
            android:textStyle="bold" />

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/container2"
        android:layout_width="44dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/container1"
        android:visibility="gone">

        <TextView
            android:id="@+id/headingBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:fontFamily="serif-monospace"
            android:gravity="center"
            android:text="H"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/headingNumberBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="-2dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="serif-monospace"
            android:text="1"
            android:textSize="14sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/container3"
        android:layout_width="44dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/container2">

        <ImageView
            android:id="@+id/bulletBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:padding="10dp"
            android:src="@drawable/ul" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/container4"
        android:layout_width="44dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/container3">

        <ImageView
            android:id="@+id/blockquoteBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:padding="10dp"
            android:src="@drawable/quote" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/container5"
        android:layout_width="44dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/container4"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:padding="10dp"
            android:src="@drawable/link" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="44dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/container5">

        <ImageView
            android:id="@+id/insertHrBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:padding="10dp"
            android:src="@drawable/hr" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="44dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/insertImageBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:padding="10dp"
            android:src="@drawable/baseline_add_a_photo_24" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DAD6D6" />

</RelativeLayout>